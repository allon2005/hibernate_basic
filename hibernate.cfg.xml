<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate_test</property> <!-- Specify the port in the connection.url -->
        <property name="connection.username">root</property>
        <property name="connection.password">root1234</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!--add data to the database, not dropping the schema-->
        <property name="hbm2ddl.auto">update</property>  <!-- if "create", will Drop and re-create the database schema on startup  -->

      <!-- Mapping files, if using xml configuration file to list all the table, columns mapping-->
        <mapping resource="customer.hbm.xml"/>
    
    <!-- if using annotation, no need to add the mapping file (bcz annotation will take care of -->
    
    
      
    </session-factory>
    


</hibernate-configuration>

<!-- 
see more: http://stackoverflow.com/questions/16335279/hibernate-configuration-file
